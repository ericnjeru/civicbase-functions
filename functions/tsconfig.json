{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": false,
    "target": "es2017",
    "forceConsistentCasingInFileNames": true,
    "types": ["@types/jest"]
  },
  "compileOnSave": true,
  "include": ["src", "tests/*.ts"]
}
